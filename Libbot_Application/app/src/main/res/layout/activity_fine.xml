<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_rectangle"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:src="@drawable/libraryhelp2"
        android:contentDescription="@string/todo" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/Fine_Amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="52dp">

        <EditText
            android:id="@+id/Fine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:inputType="textPersonName"
            android:text="Fine to be Paid" />
    </android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_payonline"
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Fine_Amt"
        android:layout_centerVertical="true"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:text="Pay Online" />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_payoffline"
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_payonline"
        android:layout_centerVertical="true"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:text="Pay fine in Lrc" />

</RelativeLayout>